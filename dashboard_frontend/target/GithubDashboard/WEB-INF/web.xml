<?xml version="1.0" encoding="UTF-8"?>

<web-app
        version="3.0"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>org.wso2.external_contributions.filters.JWTAction</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>./classes/log4jconfig.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>pullRequests</servlet-name>
        <servlet-class>org.wso2.external_contributions.serverlets.PullRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>issues</servlet-name>
        <servlet-class>org.wso2.external_contributions.serverlets.Issues</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>prSummary</servlet-name>
        <servlet-class>org.wso2.external_contributions.serverlets.SummaryOfPullRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>issueSummary</servlet-name>
        <servlet-class>org.wso2.external_contributions.serverlets.SummaryOfIssues</servlet-class>
    </servlet>

    <!-- maps the url /hello to the servlet -->
    <servlet-mapping>
        <servlet-name>pullRequests</servlet-name>
        <url-pattern>/pullRequests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>issues</servlet-name>
        <url-pattern>/issues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>prSummary</servlet-name>
        <url-pattern>/prSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>issueSummary</servlet-name>
        <url-pattern>/issueSummary</url-pattern>
    </servlet-mapping>
</web-app>